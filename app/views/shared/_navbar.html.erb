<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/instruments", class: "navbar-brand" do %>
      <div class="navbar-logo">
        <span class="logo-icon"><%= image_tag "logo.png",  class: "img-logo" %></span>
        <span class="logo-text">InstruRental</span>
      </div>
    <% end %>

    <div class="search-bar-container">
      <%= form_with url: instruments_path, method: :get, class: "d-flex search-bar" do %>
        <%= text_field_tag :query, params[:query], class: "search-input", placeholder: "Search an instrument..." %>
        <%= submit_tag "Search", class: "search-button" %>
      <% end %>
      <%= link_to "List an instrument", "/listings", class: "list-button" %>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <div class="pill">
            <li class="nav-item dropdown">
            <a href="/instruments" alt="dropdown-menu"><i class="fas fa-home"></i></a>
            <a href="" class="nav-item dropdown" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i></a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" style="top: 48px;">
                <%= link_to "Profile", "/profile", class: "dropdown-item" %>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
            </li>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
