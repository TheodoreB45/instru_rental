<h1>Description</h1>

<div>
<ul><h4>Title:</h4>
    <li><%= @instrument.title %></li>
    <h4>Description:</h4>
    <li><%= @instrument.description %></li>
    <h4>Condition:</h4>
    <li><%= @instrument.condition %></li>
    <h4>Price per day:</h4>
    <li><%= @instrument.price_per_day%></li>
    <h4>location:</h4>
    <div>
    <li><%= @instrument.address %></li>
      <p>available_from:</p>
      <li><%= @instrument.available_from %></li>
      <p>available_until</p>
      <li><%= @instrument.available_until %></li>
    </div>
  </ul>
</div>

<div>
  <h5>Book this instrument:</h5>
    <%= simple_form_for [@instrument, @booking] do |f| %>
      <%= f.input :start_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
      <%= f.submit "Book now", class: "btn btn-secondary" %>
    <% end %>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
