  <h1>Your bookings:</h1>
<ul>
  <% @bookings.each do | booking | %>
    <li><%= booking.instrument.title %></li>
    <li><%= booking.start_date %></li>
    <li><%= booking.end_date %></li>
    <%= link_to "Delete", booking_path(booking), data: {
      turbo_method: :delete,
        turbo_confirm: "Are you sure?" } %>
  <% end %>
</ul>
  <h3>Instruments:</h3>
  <ul>
    <% @instruments.each do |instrument| %>
      <li><%= link_to instrument.title, instrument_path(instrument) %>
      <%= link_to "Delete", profile_path(instrument), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
  <%= link_to "Add New instrument", new_instrument_path  %>
