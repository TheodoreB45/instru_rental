
<h1 class="text-center">Profile</h1>
<div class="d-flex justify-content-between">
  <div>
    <h3>Your bookings:</h3>
    <ul class="list-unstyled m-3 p-">
      <% @bookings.each do | booking | %>
        <li><%= booking.instrument.title %></li>
        <li><%= booking.start_date %></li>
        <li><%= booking.end_date %></li>
        <%= link_to "Delete", booking_path(booking), data: {
          turbo_method: :delete,
            turbo_confirm: "Are you sure?" } %>
      <% end %>
    </ul>
  <div>
  <div>
    <h3>Instruments:</h3>
    <ul class="list-unstyled">
      <% @instruments.each do |instrument| %>
        <li><%= link_to instrument.title, instrument_path(instrument) %>
        <%= link_to "Delete", profile_path(instrument), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?" } %></li>
      <% end %>
    </ul>
    <%= link_to "List New instrument", new_instrument_path  %>
  <div>
</div>
