<div class="d-flex justify-content-between">
  <div>
    <h3>Bookings:</h3>
    <ul class="list-unstyled m-3 p-">
      <% @bookings.each do | booking | %>
        <li><%= booking.instrument.title %></li>
        <li><%= booking.start_date %></li>
        <li><%= booking.end_date %></li>
        <%= link_to "Delete", booking_path(booking), data: {
          turbo_method: :delete,
            turbo_confirm: "Are you sure?" } %>
      <% end %>
    </ul>
  <div>
</div>
